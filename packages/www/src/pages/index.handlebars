{{#> layout
  title='Translate once. Remember forever.'
  url='/'
  hideLogo=true
}}
  <div class="container-fluid p-5">
    <header class="mb-4 py-4">
      <img src="assets/black-logo.svg" style="height: 2rem;" alt="Vocably Logo" />
    </header>
    <div class="row align-items-center">
      <div class="col-5 h3 hero-text">
        A powerful combination of<br />
        a high-quality dictionary<br />
        and flashcards.
      </div>
      <div class="col-7">
        <swiper-container slides-per-view="1.1" space-between="20">
          <swiper-slide>
            <div class="hero-slide vh-lg-auto vh-80">
              <div class="row">
                <div class="col-xl-6 order-xl-1 fs-5 mb-4">
                  <div>Instant, AI-powered translations on any site.</div>
                  <div class="mt-4">Save your translations as top-quality flashcards.</div>
                </div>
                <div class="col-xl-6 order-xl-0">
                  <div class="chrome-popup">
                    <img class="image-shadow chrome-popup-popup" alt="Chrome popup example" src="assets/hero/chrome-popup.png" />
                    <div class="chrome-popup-text mt-2"><img alt="Chrome popup text example" src="assets/hero/chrome-text.png" /></div>
                  </div>
                </div>
              </div>
            </div>
          </swiper-slide>
          <swiper-slide>
            <div class="hero-slide">
              <div class="row align-items-center">
                <div class="col-3">
                  <last-iphone style="width: 100%;" class="image-shadow">
                    <img src="assets/hero/study.png" alt="Example of a quiz" />
                  </last-iphone>
                </div>
                <div class="col-9 display-6" style="font-size: 2.2rem">
                  Master your language flashcards with interactive quizzes and questions on the mobile app.
                </div>
              </div>
            </div>
          </swiper-slide>
        </swiper-container>
      </div>
    </div>
  </div>

{{/layout}}

