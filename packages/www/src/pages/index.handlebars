{{#> layout
  title='Translate once. Remember forever.'
  url='/'
  hideLogo=true
}}
  <div class="hero-container">
    <div class="headline d-flex flex-column align-items-md-end justify-content-center z-1 ps-4 ps-md-0">
      <div class="p-4 py-md-0 me-md-5" style="pointer-events: all">
        <div class="mb-3">
          <img src="assets/logo-gray.svg" style="height: 1.5rem;" alt="Vocably Logo" />
        </div>
        <div class="headline-text gradient-headline">
          A powerful combination&nbsp;of<br class="d-none d-md-block" />
          a <span class="text-nowrap">high-quality</span> dictionary<br class="d-none d-md-block" />
          and flashcards.
        </div>
        <div class="mt-4 d-none d-md-block">
          <div class="w-75">
            <button class="cta-button d-block w-100">Set up. It's free.</button>
            <div class="mt-2 d-flex flex-direction-row align-items-center justify-content-center gap-2">
              <span class="small">Supports</span>
              <ul class="platforms list-unstyled d-inline-flex align-items-start justify-content-center gap-2 align-middle m-0">
                <li>
                  <a href="https://chrome.google.com/webstore/detail/vocably/baocigmmhhdemijfjnjdidbkfgpgogmb" target="_blank">
                    <img src="assets/chrome.svg" alt="Chrome Logo" />
                    <span>Chrome</span>
                  </a>
                </li>
                <li>
                  <a href="https://apps.apple.com/app/id6464076425" target="_blank">
                    <img src="assets/safari.svg" alt="Safari Logo" />
                    <span>Safari</span>
                  </a>
                </li>
                <li>
                  <a href="https://play.google.com/store/apps/details?id=com.vocablypro" class="android" target="_blank">
                    <img src="assets/android.svg" alt="Android Logo" />
                    <span>Android</span>
                  </a>
                </li>
                <li>
                  <a href="https://apps.apple.com/us/app/vocably-pro-language-cards/id1641258757" target="_blank">
                    <img src="assets/apple.svg" alt="Apple Logo" />
                    <span>iOS</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="slides z-0 ps-4 ps-md-0">
      <div class="vertical-center">
        <swiper-container id="swiper" init="false" slides-per-view="auto">
          <swiper-slide class="hero-slide align-items-center justify-content-center slide-chrome-extension p-4 p-xxl-5">
            <div class="row">
              <div class="col-xxl-5 order-xxl-1 mb-4 hfs-1">
                <div>Instant, <span class="text-nowrap">AI-powered</span> translations on any site.</div>
                <div class="mt-4">Save your translations as top-quality flashcards.</div>
              </div>
              <div class="col-xxl-7 order-xxl-0">
                <div class="chrome-popup">
                  <img class="image-shadow chrome-popup-popup" alt="Chrome popup example" src="assets/hero/chrome-popup.png" />
                  <div class="chrome-popup-text mt-2"><img alt="Chrome popup text example" src="assets/hero/chrome-text.png" /></div>
                </div>
              </div>
            </div>
          </swiper-slide>
          <swiper-slide class="hero-slide p-4 p-xxl-5 pb-0">
            <div class="row align-items-center">
              <div class="col-xxl-6 order-xxl-1 hfs-1 mb-3 mt-4 mt-xxl-0 mb-xxl-0">
                Master your  words with interactive quizzes and questions.
              </div>
              <div class="col-xxl-6 order-xxl-0">
                <latest-iphone mode="dark" style="height: 350px; display: block;">
                  <img src="assets/hero/study.png" />
                </latest-iphone>
              </div>
            </div>
          </swiper-slide>
          <swiper-slide class="hero-slide p-4 p-xxl-5 pb-0">
            <div class="row align-items-center">
              <div class="col-xxl-6 hfs-1 mb-3 mt-4 mt-xxl-0 mb-xxl-5">
                Donâ€™t know the right word? Search for it in your native language.
              </div>
              <div class="col-xxl-6">
                <latest-iphone style="height: 350px; display: block;">
                  <img src="assets/hero/reverse-translation.png" />
                </latest-iphone>
              </div>
            </div>
          </swiper-slide>
        </swiper-container>

        <div class="text-end mt-4 me-5">
          <button id="swiper-prev" class="navigation-button"><i class="bi bi-arrow-left"></i></button>
          <button id="swiper-next"  class="navigation-button"><i class="bi bi-arrow-right"></i></button>
        </div>

        <div class="mt-4 d-md-none pe-4 mb-5">
          <button class="cta-button d-block w-100">Set up. It's free.</button>

          <div class="d-flex align-items-center justify-content-center mt-3 mb-2 text-muted small gap-2">
            <span>Supports</span>
            <ul class="platforms list-unstyled d-inline-flex align-items-start justify-content-center gap-2 m-0">
              <li>
                <a href="https://chrome.google.com/webstore/detail/vocably/baocigmmhhdemijfjnjdidbkfgpgogmb" target="_blank">
                  <img src="assets/chrome.svg" alt="Chrome Logo" />
                  <span>Chrome</span>
                </a>
              </li>
              <li>
                <a href="https://apps.apple.com/app/id6464076425" target="_blank">
                  <img src="assets/safari.svg" alt="Safari Logo" />
                  <span>Safari</span>
                </a>
              </li>
              <li>
                <a href="https://play.google.com/store/apps/details?id=com.vocablypro" class="android" target="_blank">
                  <img src="assets/android.svg" alt="Android Logo" />
                  <span>Android</span>
                </a>
              </li>
              <li>
                <a href="https://apps.apple.com/us/app/vocably-pro-language-cards/id1641258757" target="_blank">
                  <img src="assets/apple.svg" alt="Apple Logo" />
                  <span>iOS</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <script>
          const swiperEl= document.getElementById('swiper');
          const swiperParams = {
            spaceBetween: 20,
            slidesPerView: 'auto',
            slidesOffsetAfter: 32,
            breakpoints: {
              768: {
                slidesOffsetBefore: 200,
              }
            },
            navigation: {
              nextEl: document.getElementById('swiper-next'),
              prevEl: document.getElementById('swiper-prev'),
            }
          };

          // now we need to assign all parameters to Swiper element
          Object.assign(swiperEl, swiperParams);

          // and now initialize it
          swiperEl.initialize();
        </script>
      </div>
    </div>
  </div>

  <div class="languages-container mb-5 px-3 mt-md-5">
    <div class="container-lg text-center">
      <swiper-container class="languages-swiper" slides-per-view="auto" space-between="20" navigation="true" slides-offset-before="40" slides-offset-after="40" slides-per-group="2">
        {{#each htmlWebpackPlugin.options.environment.languages}}
          <swiper-slide class="language-slide">
            <img alt="{{ this.name }} flag" class="flag" src="assets/language-flags/{{this.code}}.svg" />
            <span class="language">{{this.name}}</span>
          </swiper-slide>
        {{/each}}
      </swiper-container>
    </div>
  </div>

{{/layout}}

