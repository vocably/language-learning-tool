  <script>
    const fontSizeInput = document.getElementById('fontSize');
    const text = document.getElementById('text');
    const darkModeInput = document.getElementById('darkMode');
    const isEditableInput = document.getElementById('isEditable');

    fontSizeInput.addEventListener('input', () => {
      text.style.fontSize = `${fontSizeInput.value}rem`;
    });

    const lightBodyColor = '#fff';
    const lightTextColor = '#6a6a6a';

    const darkBodyColor = '#212226'
    const darkTextColor = '#bababa';

    darkModeInput.addEventListener('change', () => {
      const isDark = darkModeInput.checked;

      document.body.style.setProperty('--bs-body-color', isDark ? darkTextColor : lightTextColor);
      document.body.style.setProperty('--bs-body-bg', isDark ? darkBodyColor : lightBodyColor);
    });

    isEditableInput.addEventListener('change', () => {
      text.contentEditable = isEditableInput.checked;
    })
  </script>

